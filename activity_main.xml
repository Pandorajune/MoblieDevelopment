<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4CDCD"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="394dp"
        android:layout_height="49dp"
        android:backgroundTint="#FFFFFF"
        android:outlineAmbientShadowColor="#000000"
        android:outlineProvider="bounds"
        android:outlineSpotShadowColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332"
        tools:srcCompat="@tools:sample/avatars" />

    <TableLayout
        android:layout_width="410dp"
        android:layout_height="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="326dp">

            <Button
                android:id="@+id/excuseme"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:autoText="false"
                android:onClick="click"
                android:text="Excuse me"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="326dp"
                />

            <Button
                android:id="@+id/ineedahotel"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:autoText="false"
                android:onClick="click"
                android:text="I need a Hotel"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="326dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="374dp">

            <Button
                android:id="@+id/ineedataxi"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:autoText="false"
                android:onClick="click"
                android:text="I need a Taxi"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="374dp" />

            <Button
                android:id="@+id/howareyou"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:autoText="false"
                android:onClick="click"
                android:text="How are you?"
                android:textAlignment="viewStart"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/howdoigettotheariport"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:text="How Do I get to the Airport?"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="374dp" />

            <Button
                android:id="@+id/whendoesthetrainleave"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:autoText="false"
                android:onClick="click"
                android:text="When does the train leave?"
                android:textAlignment="viewStart"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="252dp"
                tools:layout_editor_absoluteY="374dp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>